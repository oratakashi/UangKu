<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Only used to extend other styles -->
    <style name="BaseTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginStart">?attr/spacing4</item>
        <item name="android:layout_marginEnd">?attr/spacing4</item>
        <item name="boxStrokeErrorColor">?attr/colorError</item>
        <item name="boxBackgroundColor">@color/color_textinput_box</item>
        <item name="errorTextAppearance">?attr/bodySmallRegular</item>
        <item name="placeholderTextAppearance">?attr/bodySmallSemiBold</item>
        <item name="android:textAppearance">?attr/bodySmallSemiBold</item>
        <item name="helperTextTextAppearance">?attr/captionSmallRegular</item>
        <item name="suffixTextAppearance">?attr/bodySmallSemiBold</item>
        <item name="prefixTextAppearance">?attr/bodySmallSemiBold</item>
        <item name="boxCornerRadiusBottomEnd">?attr/radius5</item>
        <item name="boxCornerRadiusBottomStart">?attr/radius5</item>
        <item name="boxCornerRadiusTopEnd">?attr/radius5</item>
        <item name="boxCornerRadiusTopStart">?attr/radius5</item>
        <item name="android:layout_marginTop">@dimen/dimen_16dp</item>
    </style>

    <!-- Only used to extend other password styles -->
    <style name="BaseTextInputLayout.Password">
        <item name="errorIconDrawable">@null</item>
        <item name="endIconMode">password_toggle</item>
    </style>

    <style name="BaseTextInputLayout.Password.Expand">
        <item name="expandedHintEnabled">false</item>
    </style>

    <!-- Only used to extend other password styles -->
    <style name="BaseTextInputLayout.Calendar">
        <item name="boxBackgroundColor">@color/color_textinput_box_calendar</item>
        <item name="errorIconDrawable">@null</item>
        <item name="endIconDrawable">@drawable/ic_calendar</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="BaseTextInputLayout.TimePicker">
        <item name="errorIconDrawable">@null</item>
<!--        <item name="endIconDrawable">@drawable/ic_clock</item>-->
        <item name="endIconMode">custom</item>
    </style>

    <style name="BaseTextInputLayout.Search">
        <item name="errorIconDrawable">@null</item>
<!--        <item name="startIconDrawable">@drawable/ic_search</item>-->
    </style>

    <!-- Only used to extend other dropdown styles -->
    <style name="BaseDropdownLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">?attr/spacing4</item>
        <item name="android:layout_marginEnd">?attr/spacing4</item>
        <item name="boxBackgroundColor">@color/color_textinput_box</item>
        <item name="endIconDrawable">@drawable/ic_chevron_down</item>
        <item name="errorTextAppearance">?attr/bodySmallRegular</item>
        <item name="hintTextAppearance">?attr/bodySmallRegular</item>
        <item name="placeholderTextAppearance">?attr/bodySmallSemiBold</item>
        <item name="android:textAppearance">?attr/bodySmallSemiBold</item>
        <item name="expandedHintEnabled">true</item>
    </style>
</resources>