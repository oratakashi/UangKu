<?xml version="1.0" encoding="utf-8"?>
<!-- When adding a new style, keep this file clean and tidy -->
<resources>
    <!-- Only used to extend other styles -->
    <style name="BaseTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">?attr/bodySmallRegular</item>
        <item name="placeholderTextAppearance">?attr/bodySmallRegular</item>
        <item name="android:textAppearance">?attr/bodySmallRegular</item>
<!--        <item name="android:textColor">@color/color_textinput_text</item>-->
        <item name="android:drawablePadding">@dimen/dimen_8dp</item>
<!--        <item name="android:textColorHint">?attr/black_50</item>-->
<!--        <item name="android:fontFamily">@font/montserrat_regular</item>-->
    </style>

    <style name="BaseTextInputEditText.OneLine">
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="BaseTextInputEditText.OneLine.Disabled">
        <item name="maxLines">1</item>
        <item name="android:inputType">none</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="BaseTextInputEditText.MultiLine">
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="BaseTextInputEditText.OneLine.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="BaseTextInputEditText.OneLine.AutoCompleteTextView">
        <item name="android:inputType">none</item>
    </style>
</resources>