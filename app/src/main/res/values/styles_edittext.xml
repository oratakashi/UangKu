<?xml version="1.0" encoding="utf-8"?>
<!-- When adding a new style, keep this file clean and tidy -->
<resources>
    <!-- Only used to extend other styles -->
    <style name="BaseTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">33dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="background">@drawable/bg_edittext</item>
    </style>

    <style name="BaseTextInputEditText.OneLine">
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="BaseTextInputEditText.OneLine.Disabled">
        <item name="maxLines">1</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="BaseTextInputEditText.MultiLine">
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="BaseTextInputEditText.OneLine.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="BaseTextInputEditText.OneLine.AutoCompleteTextView">
        <item name="android:inputType">none</item>
    </style>
</resources>