<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button.BlueNavy">
        <item name="android:background">@drawable/selector_button_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.BlueNavyFit">
        <item name="android:background">@drawable/selector_button_primary_fit</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/selector_button_primary_outline</item>
        <item name="android:textColor">@drawable/selector_button_secondary_text_color</item>
    </style>

    <style name="ShapeAppearanceOverlayExtended" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>